{
  "name": "github-action-working-directory",
  "version": "0.0.0",
  "author": "Cameron Tacklind <cameron@tacklind.com>",
  "license": "MIT",
  "private": true,
  "description": "GitHub Action that clones a repo into a working directory, lets you modify it, and then commits the changes back to the repository",
  "keywords": [
    "actions",
    "node",
    "git",
    "clone",
    "commit",
    "persistent",
    "storage",
    "cache",
    "push"
  ],
  "scripts": {
    "build": "ncc build src/clone.ts -o dist/clone && ncc build src/commit.ts -o dist/commit && cp src/action.yml dist/",
    "lint": "eslint \"**/*\"",
    "format": "prettier \"**/*\"",
    "spellcheck": "cspell \"**/*\"",
    "format-check": "npm run format -- --check",
    "clean": "rm -rf dist public allure-results",
    "test": "jest",
    "allure": "allure generate --clean --report-dir public/allure-report",
    "finalize-coverage-reports": "npm run allure && touch public/.nojekyll",
    "prepare": "npm run build",
    "all": "npm install && npm run format-check && npm run lint && npm run spellcheck && npm test && npm run finalize-coverage-reports"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cinderblock/github-action-working-directory.git"
  },
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/io": "^1.0.1",
    "nodegit": "^0.26.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.4",
    "@types/nodegit": "^0.26.0",
    "@typescript-eslint/parser": "^2.14.0",
    "@zeit/ncc": "^0.21.0",
    "allure-commandline": "^2.13.0",
    "cspell": "^4.0.44",
    "eslint": "^6.8.0",
    "eslint-plugin-github": "^3.4.0",
    "eslint-plugin-jest": "^23.3.0",
    "jest": "^24.9.0",
    "jest-allure": "^0.1.1",
    "jest-circus": "^24.9.0",
    "jest-github-reporter": "^0.3.4",
    "jest-html-reporters": "^1.2.1",
    "jest-stare": "^1.26.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4"
  }
}
